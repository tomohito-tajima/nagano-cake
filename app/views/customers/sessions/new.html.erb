<div class="container">
  <div class="title">
    <h4>ログイン</h4>
  </div>

　<div>
　  <h5>会員の方はこちらからログイン</h5>
　</div>
  <%= form_with(model: @user, url: customer_registration_path, local: true) do |f| %>
    <div class="row">
      <div class="col-md">
        <table class="table">
          <tr>
            <td><%= f.label :email %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td><%= f.label :password %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>

          <tr>
            <td></td>
            <td>
              <div>
                <%= f.submit "ログイン", class: "btn btn-block btn-sm btn-prymary" %>
              </div>
            </td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
  <div>
    <h5>会員登録がお済みでない方</h5>
    <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行って下さい。</p>
  </div>
</div>